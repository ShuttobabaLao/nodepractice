<!DOCTYPE html>
 <html lang="en">
 <head>
   <% include ./partials/head %>
 </head>
 <body class="container">

 <header>
   <% include ./partials/nav %> 
 </header>

 <div class="container" width="900px">
   <div class="row">
    <div class="col-md-offset-2 col-md-6">
       <% if(error) { %>
        <div style="color:pink"> <%= error %></div>
       <% } %>
       <% if(success) { %>
        <div style="color:blue"> <%= success %></div>
       <% } %>
            <div class="panel panel-default">
                <div class="panel-heading">Add Student Details</div>
                <div class="panel-body">
                        
                    <form action="/create" method="POST">
            
                        <div class="form-group">
                            <input type="text" name="name" placeholder= "Your Name" class="form-control" required>
                        </div>
                        <div class="form-group">
                           <input type="number" name="id_no" placeholder= "Your ID" class="form-control" required>
                        </div>
            
                        <div class="form-group">
                           <input type="email" name="email" placeholder= "Your Email" class="form-control" required>
                        </div>
                        <div class="form-group">
                           <input type="text" name="grade" placeholder= "Your Year" class="form-control" required>
                        </div>
                        <div class="form-group">
                           <input type="text" name="tname" placeholder= "Your Year Teacher" class="form-control" required>
                        </div>
            
                        <div class="form-group">
                            <div class="radio">
                                <b>Gender:</b> <label><input type="radio" name="gender" required>Male</label>
                            
                                <label><input type="radio" name="gender" required>Female</label>
                            </div>
                        </div>   
                        
                        <div class="form-group">
                            <label>About yourself</label>
                            <textarea name="description" rows="2" placeholder="Also describe your class teacher"class="form-control"></textarea>
                        </div>
                        
                        <div class="form-group">
                            <button type="submit" class="btn btn-success btn-lg">Create</button>
                        </div>
                        
                    </form>
                </div>
            </div>
         </div>
      </div>  
     </div>

   </body>  
   </html>